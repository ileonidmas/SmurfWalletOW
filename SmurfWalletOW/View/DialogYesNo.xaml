<UserControl x:Class="SmurfWalletOW.View.DialogYesNo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmurfWalletOW.View"
             mc:Ignorable="d" 
            d:DesignHeight="100" d:DesignWidth="300"  
             d:DataContext="{Binding DialogYesNoViewModel, Source={StaticResource Locator}}">
    <Grid Margin="4">
        <Label Content="{Binding Message}" HorizontalAlignment="Left" Margin="105,50,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Yes" Command="{Binding YesCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" HorizontalAlignment="Left" Margin="135,70,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="No"  Command="{Binding NoCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" HorizontalAlignment="Left" Margin="215,70,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</UserControl>
